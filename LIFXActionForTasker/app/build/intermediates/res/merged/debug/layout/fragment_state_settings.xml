<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawa.tasker.lifxplugin.ui.StateSettingsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/power_group"
            android:checkedButton="@+id/power_on">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="-5dp"
                android:text="@string/info_power"
                android:id="@+id/info_power" />

            <RadioButton
                android:id="@+id/power_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/on_text"/>

            <RadioButton
                android:id="@+id/power_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/off_text"/>

            <RadioButton
                    android:id="@+id/power_unchanged"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unchanged_text"/>

        </RadioGroup>

        <include layout="@layout/color"/>

        <include layout="@layout/brightness"/>

        <include layout="@layout/duration"/>

    </LinearLayout>
</FrameLayout>
